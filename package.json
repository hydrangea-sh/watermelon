{
	"name": "sori",
	"version": "0.0.1",
	"type": "module",
	"description": "Sori, inspired from the Korean word '소리' meaning 'sound', is a multipurpose Discord bot.",
	"module": "src/index.ts",
	"scripts": {
		"start": "bun --bun --env-file=.env.production run .",
		"dev": "bun --bun --watch --env-file=.env.development run .",
		"test": "bun --coverage test .",
		"test:watch": "bun --coverage --watch test .",
		"format": "bunx @biomejs/biome format --write .",
		"lint": "bunx @biomejs/biome lint --write .",
		"check": "bunx @biomejs/biome check --write ."
	},
	"license": "GPL-3.0",
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"bun-types": "latest"
	},
	"peerDependencies": {
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"@discordjs/opus": "^0.9.0",
		"@discordjs/voice": "^0.16.1",
		"@napi-rs/canvas": "^0.1.53",
		"@skyra/gifenc": "^1.0.1",
		"discord.js": "^14.15.3",
		"elysia": "^1.1.3",
		"gifwrap": "^0.10.1",
		"jimp": "^0.22.12",
		"sodium": "^3.0.2",
		"uwuifier": "^4.0.5"
	},
	"trustedDependencies": ["@biomejs/biome"]
}
